<Window x:Class="ConversorDeMedidas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConversorDeMedidas"
        mc:Ignorable="d"
        Title="Conversor de Medidas" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2.*" />
            <RowDefinition Height="2.*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock VerticalAlignment="Top" 
                   HorizontalAlignment="Left"
                   Grid.ColumnSpan="2" 
                   FontSize="25"
                   FontWeight="Bold"
                   Foreground="Blue" Margin="246,29,0,0">
            CONVERSOR DE MEDIDAS
        </TextBlock>

        <StackPanel Grid.Row="0" Margin="246,87,280,87" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Label Content="Label 0" />
            <ComboBox x:Name="cbTipo" SelectionChanged="cbTipo_SelectionChanged" >
                <ComboBoxItem>Selecione um tipo de conversão</ComboBoxItem>
                <ComboBoxItem>
                    Centimetros para Metros
                </ComboBoxItem>
                <ComboBoxItem >
                    Metros para Kilometros
                </ComboBoxItem>
                <ComboBoxItem >

                </ComboBoxItem>
            </ComboBox>


        </StackPanel>
        <TextBox x:Name="edValor1" TextWrapping="Wrap" Text="TextBox" Margin="110,91,170,109" Grid.Row="1" />


    </Grid>
</Window>
